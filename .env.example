# ============================================
# Multi-Modal RAG QA System - Environment Variables
# ============================================

# ============================================
# API Keys
# ============================================

# OpenAI API Key (for GPT models and embeddings)
OPENAI_API_KEY=your_openai_api_key_here

# Groq API Key (for Llama models)
GROQ_API_KEY=your_groq_api_key_here

# HuggingFace API Token (for model downloads)
HUGGINGFACE_TOKEN=your_huggingface_token_here

# ============================================
# Model Configuration
# ============================================

# LLM Provider: openai, groq, or ollama
LLM_PROVIDER=groq

# Model Name
LLM_MODEL_NAME=llama-3.1-8b-instant

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# ============================================
# Vector Store Configuration
# ============================================

# Vector Store Type: chromadb, qdrant, or faiss
VECTOR_STORE_TYPE=chromadb

# ChromaDB Settings
CHROMADB_HOST=localhost
CHROMADB_PORT=8000
CHROMADB_PERSIST_DIR=data/vector_store/chromadb

# Qdrant Settings (if using Qdrant)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=

# ============================================
# Application Settings
# ============================================

# Environment: development, staging, production
ENVIRONMENT=development

# Debug Mode
DEBUG=true

# Log Level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================
# API Server Settings
# ============================================

# API Host
API_HOST=0.0.0.0

# API Port
API_PORT=8000

# API Workers
API_WORKERS=4

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8501

# ============================================
# Data Paths
# ============================================

# Data Directory
DATA_DIR=data

# Upload Directory
UPLOAD_DIR=data/raw

# Processed Data Directory
PROCESSED_DIR=data/processed

# Models Directory
MODELS_DIR=models

# Cache Directory
CACHE_DIR=.cache

# ============================================
# Processing Settings
# ============================================

# Maximum file upload size (in MB)
MAX_UPLOAD_SIZE=100

# Batch processing size
BATCH_SIZE=32

# Number of workers for parallel processing
NUM_WORKERS=4

# ============================================
# Retrieval Settings
# ============================================

# Number of documents to retrieve
TOP_K=5

# Similarity threshold
SIMILARITY_THRESHOLD=0.5

# Enable reranking
ENABLE_RERANKING=true

# ============================================
# Generation Settings
# ============================================

# Temperature for LLM generation
TEMPERATURE=0.1

# Maximum tokens for generation
MAX_TOKENS=2048

# Stream responses
STREAM_RESPONSES=false

# ============================================
# Performance & Optimization
# ============================================

# Enable caching
ENABLE_CACHE=true

# Cache TTL (in seconds)
CACHE_TTL=3600

# Use GPU if available
USE_GPU=false

# Device: cpu, cuda, mps
DEVICE=cpu

# ============================================
# Monitoring & Observability
# ============================================

# Enable metrics
ENABLE_METRICS=true

# Metrics port
METRICS_PORT=9090

# Enable tracing
ENABLE_TRACING=false

# ============================================
# Database (Optional - for conversation history)
# ============================================

# Database URL
DATABASE_URL=sqlite:///data/app.db

# ============================================
# Security
# ============================================

# Secret key for JWT
SECRET_KEY=your_secret_key_here_change_in_production

# JWT Algorithm
JWT_ALGORITHM=HS256

# Access token expiry (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ============================================
# Feature Flags
# ============================================

# Enable multi-modal retrieval
ENABLE_MULTIMODAL=true

# Enable image processing
ENABLE_IMAGE_PROCESSING=true

# Enable audio processing
ENABLE_AUDIO_PROCESSING=true

# Enable video processing
ENABLE_VIDEO_PROCESSING=false

# Enable evaluation mode
ENABLE_EVALUATION=true
